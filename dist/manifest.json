{
  "manifest_version": 2,

  "name": "Connect",
  "description": "Connecting...",
  "version": "1.0",

  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "index.html"
  },
  "background": {
    "persistent": true,
    "page": "background.html"
  },
  "externally_connectable": {
    "matches": ["https://localhost:3004/*"]
  },
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com https://localhost:3004 http://localhost:3004/socket.io/socket.io.js https://www.google.com; object-src 'self'"
}